<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
 <persistence-unit name="Afstandsbediening" transaction-type="RESOURCE_LOCAL">
 <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>model.entities.Remote</class>
        <class>model.entities.Person</class>
        <class>model.entities.Address</class>

 <properties>
  <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
  <property name="javax.persistence.jdbc.url"
    value="jdbc:mysql://localhost:3306/DbRemote" />
  <property name="javax.persistence.jdbc.user" value="userDB" />
  <property name="javax.persistence.jdbc.password" value="userDB" />

 </properties>

 </persistence-unit>
</persistence>
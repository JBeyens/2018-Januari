<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
  
 <hibernate-mapping>  
  <class name="modelPersistent.Person" table="Person">  
    <id name="id">  
     <generator class="assigned"></generator>  
    </id>  
            
    <property name="firstName" column = "firstName" type = "string"></property>  
    <property name="lastName" column = "lastName" type = "string"></property>
    <property name="email" column = "email" type = "string"></property> 
    <property name="endOfContract" column = "endOfContract" type = "date"></property>
    
    <many-to-one name="address" class="modelPersistent.Address" column="addressId"
    not-null= "true" cascade="save-update"></many-to-one>
    
    <many-to-one name="remote" class="modelPersistent.Remote" column="remoteId"
    not-null="true" cascade="save-update"></many-to-one> 
            
  </class>  
            
 </hibernate-mapping>